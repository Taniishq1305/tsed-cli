{
  "parser": "@typescript-eslint/parser",
  "extends": [{{#if prettier}}
    "prettier",{{/if}}
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [{{#if prettier}}
    "prettier",{{/if}}
    "@typescript-eslint"
  ],
  "env": {
   "node": true,
   "es6": true
  },
  "rules": { {{#if prettier}}
    "prettier/prettier",{{/if}}
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/no-unused-vars": 2,
    "@typescript-eslint/no-var-requires": 0
  }
}
